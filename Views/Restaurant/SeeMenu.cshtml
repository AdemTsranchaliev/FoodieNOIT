
@{
    ViewData["Title"] = "SeeMenu";
}
@model List<MenuCategory>

@section nav{
    <div class="dark-bg sticky-top">
}

@section styles{
    <link rel="stylesheet" type="text/css" href="~/styles/bootstrap-4.1.2/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
    <link rel="stylesheet" type="text/css" href="~/css/menu.css">
    <link rel="stylesheet" type="text/css" href="~/css/menu_responsive.css">

    <link rel="stylesheet" href="~/css/bootstrap.min.css">

    <!-- Simple line Icon -->
    <link rel="stylesheet" href="~/css/simple-line-icons.css">
    <!-- Themify Icon -->
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <!-- Hover Effects -->
    <link rel="stylesheet" href="~/css/set1.css">
    <!-- Swipper Slider -->
    <link rel="stylesheet" href="~/css/swiper.min.css">
    <!-- Magnific Popup CSS -->
    <link rel="stylesheet" href="~/css/magnific-popup.css">
    <!-- Main CSS -->
    <link rel="stylesheet" href="~/css/style.css">
}

@section scripts2{
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/styles/bootstrap-4.1.2/popper.js"></script>
    <script src="~/styles/bootstrap-4.1.2/bootstrap.min.js"></script>
    <script src="~/plugins/greensock/TweenMax.min.js"></script>
    <script src="~/plugins/greensock/TimelineMax.min.js"></script>
    <script src="~/plugins/scrollmagic/ScrollMagic.min.js"></script>
    <script src="~/plugins/greensock/animation.gsap.min.js"></script>
    <script src="~/plugins/greensock/ScrollToPlugin.min.js"></script>
    <script src="~/plugins/OwlCarousel2-2.2.1/owl.carousel.js"></script>
    <script src="~/plugins/easing/easing.js"></script>
    <script src="~/plugins/parallax-js-master/parallax.min.js"></script>
    <script src="~/plugins/colorbox/jquery.colorbox-min.js"></script>
    <script src="~/plugins/jquery-datepicker/jquery-ui.js"></script>
    <script src="~/plugins/jquery-timepicker/jquery.timepicker.js"></script>
    <script src="~/js/custom.js"></script>

}





<div class="themenu">
    <div class="container">
        <div class="row">
            <div class="col">
                <center>
                    <h2>Меню</h2>
                    <h3>@ViewBag.restaurantName</h3>
                </center>
            </div>
        </div>

        <div class="row themenu_row">

            @if (Model.Count() != 0)
            {
                @foreach (var item in Model)
                {
                    @if (item.Products.Count != 0)
                    {
                        <div class="col-lg-4 themenu_column">
                            <div class="themenu_col trans_400">
                                <h3>@item.Name</h3>
                                <div class="dish_list">

                                    @foreach (var item2 in item.Products)
                                    {
                                        <div class="dish">
                                            <div class="dish_title_container d-flex flex-xl-row flex-column align-items-start justify-content-start">
                                                <div class="dish_title">@item2.Name</div>



                                                <div class="dish_price">
                                                    @item2.Price лв.
                                                </div>

                                            </div>
                                            <div class="dish_contents">
                                                <p>@item2.Weight гр.</p>
                                                <ul class="d-flex flex-row align-items-start justify-content-start flex-wrap">
                                                    @foreach (var item3 in item2.ProductIngredients)
                                                    {
                                                        <li>@item3.Ingredients.Name</li>
                                                    }


                                                </ul>
                                            </div>

                                        </div>
                                    }

                                </div>
                            </div>
                        </div>

                    }
                }
            }
            else
            {
                <div class="themenu">
                    <div class="container">
                        <center>
                          
                            <img src="~/images/cutlery.png">
                            <h1 class="text-dark">Заведението няма качено меню</h1>
                       
                        </center>
                    </div>
                </div>
      
            <!-- Footer -->
        }
            <!-- Starters -->

        </div>

    </div>

</div>
