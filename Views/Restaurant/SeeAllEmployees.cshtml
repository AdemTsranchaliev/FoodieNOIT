<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">

        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header">Всички служители</h5>
                    <div class="card-body">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Име и фамилия</th>
                                    <th scope="col">Телефон</th>
                                    <th scope="col">Имейл</th>
                                    <th scope="col">Добавен на</th>
                                    <th scope="col">Начална парола</th>
                                    <th scope="col">Регистрация</th>
                                    <th scope="col">Роля</th>
                                    <th scope="col">Потвърди</th>
                                    <th scope="col">Откажи</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <th scope="row">#</th>
                                        <td>@item.EmployeeFullName</td>
                                        <td>@item.PhoneNumber </td>
                                        <td>@item.Email</td>
                                        <td>@item.RegisteredOn</td>
                                        <td>@item.AutoGeneratedPassword</td>

                                        @if (item.isRegistrationFinished == false)
                                        {
                                            <td>
                                                <span class="badge-dot badge-brand mr-1">
                                                </span>
                                                незавършена
                                            </td>
                                        }
                                        else
                                        {
                                            <td>
                                                <span class="badge-dot badge-brand badge-success mr-1">
                                                </span>
                                                завършена
                                            </td>
                                        }


                                        @if (await userManager.IsInRoleAsync(item, "Waiter"))
                                        {
                                            <td>Сервитьор</td>
                                        }
                                        else
                                        {
                                            <td>Готвач</td>
                                        }

                                        <td>
                                            <a asp-controller="Restaurant" asp-action="SeeEmployeeOrders" asp-route-id="@item.Id" class="btn btn-primary a-btn-slide-text">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                <span><strong>Поръчки</strong></span>
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-controller="Restaurant" asp-action="EditEmployee" asp-route-Id="@item.Id" class="btn btn-primary a-btn-slide-text">
                                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                                                <span><strong>Редактирай</strong></span>
                                            </a>
                                        </td>
                                    </tr>

                                }


                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
