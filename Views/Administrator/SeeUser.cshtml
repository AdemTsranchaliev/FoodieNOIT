
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Http.Authentication
@model Restaurant
@{
    ViewData["Title"] = "FinishRestaurantRegistration";
}


@section nav{


}

@section styles{
