    <link href="~/restaurantControlPanel/assets/vendor/fonts/circular-std/style.css" rel="stylesheet">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/libs/css/style.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/fonts/fontawesome/css/fontawesome-all.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/charts/chartist-bundle/chartist.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/charts/morris-bundle/morris.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/fonts/material-design-iconic-font/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/charts/c3charts/c3.css">
    <link rel="stylesheet" href="~/restaurantControlPanel/assets/vendor/fonts/flag-icon-css/flag-icon.min.css">
    <link href="~/jquery-flexdatalist-2.2.4/jquery.flexdatalist.min.css" rel="stylesheet" type="text/css">
}

@section scripts2{
    <script src="~/restaurantControlPanel/assets/vendor/jquery/jquery-3.3.1.min.js"></script>
    <!-- bootstap bundle js -->
    <script src="~/restaurantControlPanel/assets/vendor/bootstrap/js/bootstrap.bundle.js"></script>
    <!-- slimscroll js -->
    <script src="~/restaurantControlPanel/assets/vendor/slimscroll/jquery.slimscroll.js"></script>
    <!-- main js -->
    <script src="~/restaurantControlPanel/assets/libs/js/main-js.js"></script>
    <!-- chart chartist js -->
    <script src="~/restaurantControlPanel/assets/vendor/charts/chartist-bundle/chartist.min.js"></script>
    <!-- sparkline js -->
    <script src="~/restaurantControlPanel/assets/vendor/charts/sparkline/jquery.sparkline.js"></script>
    <!-- morris js -->
    <script src="~/restaurantControlPanel/assets/vendor/charts/morris-bundle/raphael.min.js"></script>
    <script src="~/restaurantControlPanel/assets/vendor/charts/morris-bundle/morris.js"></script>
    <!-- chart c3 js -->
    <script src="~/restaurantControlPanel/assets/vendor/charts/c3charts/c3.min.js"></script>
    <script src="~/restaurantControlPanel/assets/vendor/charts/c3charts/d3-5.4.0.min.js"></script>
    <script src="~/restaurantControlPanel/assets/vendor/charts/c3charts/C3chartjs.js"></script>
    <script src="~/restaurantControlPanel/assets/libs/js/dashboard-ecommerce.js"></script>
    <script src="~/jquery-flexdatalist-2.2.4/jquery.flexdatalist.min.js"></script>
    <script>
        $('.flexdatalist').flexdatalist({
            minLength: 1
        });
    </script>

}

<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <div class="row">
            <div class="col-xl-9 col-lg-12 col-md-12 col-sm-12 col-12">

                <div class="card">
                    <h1 class="card-header">Основна информация</h1>
                    <div class="card-body">
                        <form method="post" asp-route-returnurl="@ViewData["ReturnUrl"]" enctype="multipart/form-data" asp-controller="Administrator" asp-action="EditUser" asp-route-id="@Model.Id">
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Име на заведението</label>
                                <input id="inputText3" type="text" class="form-control" asp-for="Name" value=" @Model.Name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Телефон на заведението</label>
                                <input id="inputText3" type="text" class="form-control" asp-for="Phone" value=" @Model.Phone">
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Адрес на заведението</label>
                                <input id="inputText3" type="text" class="form-control" asp-for="Address.Street" value=" @Model.Address.Street">
                                <span asp-validation-for="Address.Street" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Град</label>
                                <input id="inputText3" type="text" class="form-control" asp-for="Address.Town.Name" value=" @Model.Address.Town.Name">
                                <span asp-validation-for="Address.Town.Name" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label for="inputText3" class="col-form-label">Пощенски код</label>
                                <input id="inputText3" type="text" class="form-control" asp-for="Address.Town.PostalCode" value=" @Model.Address.Town.PostalCode">
                                <span asp-validation-for="Address.Town.PostalCode" class="text-danger"> </span>
                            </div>
                            <div class="form-group">
                                <label for="inputText4" class="col-form-label">Брой маси</label>
                                <input id="inputText4" type="number" class="form-control" asp-for="Seats" value=" @Model.Seats">
                                <input type="hidden" asp-for="Id" value=" @Model.Id">
                                <span asp-validation-for="Seats" class="text-danger"> </span>
                            </div>

                            <div class="form-group">
                                <label for="exampleFormControlTextarea1">Описание</label>
                                <textarea class="form-control" id="exampleFormControlTextarea1" rows="6" asp-for="AdditionalInformation" value=" @Model.AdditionalInformation"></textarea>
                            </div>


                    </div>

                    <button class="btn btn-primary btn-lg" type="submit">Редактирай</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}