@{
    ViewData["Title"] = "Home Page";
}
@model List<Restaurant>
@section styles{
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,400i,500,700,900" rel="stylesheet">
    <link rel="stylesheet" href="~/css/simple-line-icons.css">
    <link rel="stylesheet" href="~/css/themify-icons.css">
    <link rel="stylesheet" href="~/css/set1.css">
    <link rel="stylesheet" href="~/css/style.css">
}

@section scripts2{
    <script src="~/js/jquery-3.2.1.min.js"></script>
    <script src="~/js/popper.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/custom.js"></script>
    <script src="~/js/jquery.magnific-popup.js"></script>
    <script src="~/js/swiper.min.js"></script>
    <script src="~/js/main.js"></script>
}


<section class="slider d-flex align-items-center">
    <!-- <img src="images/slider.jpg" class="img-fluid" alt="#"> -->
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12">
                <div class="slider-title_box">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="slider-content_wrap">
                                <h1>Открий | Посети | Изживей</h1>
                                <!-- <h5>Let's uncover the best places to eat, drink, and shop nearest to you.</h5>-->
                            </div>
                        </div>
                    </div>
                    <div class="row d-flex justify-content-center">
                        <div class="col-md-10">
                            <form class="form-wrap mt-4" asp-controller="Home" asp-action="Search" method="get">
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <input type="text" placeholder="Какво търсиш?" class="btn-group1" name="what">
                                    <input type="text" placeholder="Къде?" class="btn-group2" name="where">
                                    <button type="submit" class="btn-form"><span class="icon-magnifier search-icon"></span>Търси<i class="pe-7s-angle-right"></i></button>
                                </div>
                            </form>
                            <div class="slider-link">
                                <!--<a href="#">Browse Popular</a><span>or</span> <a href="#">Recently Addred</a>-->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!--//END FIND PLACES -->
<!--============================= FEATURED PLACES =============================-->
<section class="main-block light-bg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                <div class="styled-heading">
                    <h3>Най-добри заведения</h3>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
    
                <div class="col-md-4 featured-responsive">
                    <div class="featured-place-wrap">
                        <a asp-controller="See" asp-action="RestaurantProfile" asp-route-Id="@item.Id">
                            <img src="~/images/RestaurantGaleries/@item.Id-0-ProfilePicture.jpg" style="width: 350px; height: 230px">
                            <span class="featured-rating-green">@item.Reviews.Count(x => x.Recommended == true)</span>
                            <div class="featured-title-box">
                                <h6>@item.Name</h6>
                                @foreach (var item2 in item.RestaurantCategories)
                                {
                                    <p>@item2.Category.Name</p> <span>• </span>
                                }
                                <p>@item.Reviews.Count() ревюта</p> <span> • </span>

                                <ul>
                                    <li>
                                        <span class="icon-location-pin"></span>
                                        <p>@(item.Address.Street), @(item.Address.Town.Name)</p>
                                    </li>
                                    <li>
                                        <span class="icon-screen-smartphone"></span>
                                        <p>@item.Phone</p>
                                    </li>
                                </ul>

                            </div>
                        </a>
                    </div>
                </div>
          
            }
        </div>
        <div class="row justify-content-center">
            <div class="col-md-4">
                <div class="featured-btn-wrap">
                    <a href="#" class="btn btn-danger">Виж всички</a>
                </div>
            </div>
        </div>
    </div>
</section>
